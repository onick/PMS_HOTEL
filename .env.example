# ===========================================
# HOTELMATE-CORE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key_here

# Supabase Service Role (for Edge Functions only - KEEP SECRET!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secrets
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here  # For subscriptions
STRIPE_PAYMENT_WEBHOOK_SECRET=whsec_your_payment_webhook_secret_here  # For payment intents (NEW)

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment: development | staging | production
NODE_ENV=development
VITE_APP_ENV=development

# Your application URLs
VITE_APP_URL=http://localhost:8080
APP_URL=http://localhost:8080

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Resend API for transactional emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# SMTP settings for email notifications (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@hotelmate.com
SMTP_FROM_NAME=HotelMate

# ===========================================
# MONITORING & ERROR TRACKING (Optional)
# ===========================================
# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/

# Frontend Sentry (browser)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Backend Sentry (Edge Functions)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# ===========================================
# RATE LIMITING (Production - Optional)
# ===========================================
# Upstash Redis for rate limiting
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ===========================================
# SECURITY
# ===========================================
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8080,https://your-production-domain.com

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_random_secret_here_min_32_chars

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SUBSCRIPTION=true
VITE_ENABLE_REVENUE_MANAGEMENT=true

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to true to enable debug logs
VITE_DEBUG=false

# Skip email sending in development (logs to console instead)
SKIP_EMAIL_SEND=true
